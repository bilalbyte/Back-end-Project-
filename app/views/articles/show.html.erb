<div class="container mx-auto px-4">
  <h1 class="text-4xl font-bold mb-4"><%= @article.title %></h1>

  <p class="text-lg mb-8"><%= @article.body %></p>

  <ul class="list-none mb-8">
    <li class="inline-block mr-4">
      <%= link_to "Edit", edit_article_path(@article), class: "text-blue-500 hover:text-blue-700" %>
    </li>
    <li class="inline-block mr-4">
      <%= link_to "Destroy", article_path(@article), data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: "text-red-500 hover:text-red-700" %>
    </li>
    <li class="inline-block">
      <%= link_to "Home", root_path, class: "text-green-500 hover:text-green-700" %>
    </li>
  </ul>

  <h2 class="text-2xl font-bold mb-4">Comments</h2>
  <div class="mb-8">
    <%= render @article.comments %>
  </div>

  <h2 class="text-2xl font-bold mb-4">Add a comment:</h2>
  <div>
    <%= render 'comments/form' %>
  </div>
</div>
