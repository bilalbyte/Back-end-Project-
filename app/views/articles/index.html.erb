<div class="container mx-auto px-4">


  <h1 class="text-4xl font-bold mb-4">Articles</h1>

  <ul class="list-disc list-inside">
    <% @articles.each do |article| %>
      <li class="mb-2">
        <%= link_to article.title, article, class: "text-blue-500 hover:text-blue-800" %>
      </li>
    <% end %>
  </ul>

  <div class="mt-8">
    <%= link_to "New Article", new_article_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110" %>
  </div>




  <div class="text-gray-700 no-underline bg-white rounded-lg ">
  <%= will_paginate @posts %>
  </div>

  
</div>


